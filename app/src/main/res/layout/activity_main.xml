<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/basketball_bg"
    tools:context=".views.Place_MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="520px"
            android:layout_height="781px"

            android:src="@mipmap/basketball_logo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:textSize="30px"
            android:textColor="#FFFFFF"
            android:text="v1.1"
            android:id="@+id/place_version"/>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_height="wrap_content">



        <Button
            android:id="@+id/place_setting"
            android:background="@mipmap/setting"
            android:layout_marginLeft="50px"
            android:layout_width="50px"
            android:layout_height="50px" />
    </LinearLayout>





</RelativeLayout>