<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@mipmap/basketball_bg"
    android:layout_height="match_parent">


    <!--android:background="@mipmap/fitplace_bg"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:id="@+id/place_title"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:textColor="#ffffff"
            android:text="设   置"
            />
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="50px"
        android:id="@+id/setting_src"
        android:layout_below="@+id/place_title"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:text="服务器IP：" />

        <EditText
            android:id="@+id/serverIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:theme="@style/MyEditText"
            android:text="192.168.0.91"
            android:layout_row="0"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:layout_column="1" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:text="定时重启时间：" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="30px"
            android:theme="@style/MyEditText"
            android:textColor="#ffffff"
            android:id="@+id/reboot_tim"
            android:text="01"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:text="门店编号：" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:theme="@style/MyEditText"
            android:id="@+id/place_id"
            android:text="01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:text="设备编号：" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="30px"
            android:theme="@style/MyEditText"
            android:textColor="#ffffff"
            android:id="@+id/device_id"
            android:text="01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:text="是否常开：" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:id="@+id/is_open"
            android:textSize="30px"
            android:textColor="#ffffff"
            />
    </GridLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_src"

        android:layout_marginTop="200px"
        android:gravity="center"
        >

        <Button
            android:layout_width="300px"
            android:layout_height="100px"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:id="@+id/enter_btn"
            android:background="@drawable/btn_color"
            android:text="确认"/>

        <Button
            android:layout_width="300px"
            android:layout_height="100px"
            android:textSize="30px"
            android:textColor="#ffffff"
            android:id="@+id/cancal_btn"
            android:text="取消"
            android:background="@drawable/btn_color"
            android:layout_marginLeft="80px"/>


    </LinearLayout>



</RelativeLayout>